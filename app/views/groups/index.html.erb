<div class="col-md-12">
  <div class="group">
    <%= link_to("发帖", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>关键词</td>
        <td>摘要</td>
        <td>作者</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= simple_format(group.description) %></td>
          <td><%= group.user.email.split('@').first %></td>
          <td>
            <% if current_user && current_user == group.user %>
              <%= link_to("改", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("删", group_path(group),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "想好了就删吧！" } )%>
           <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
